{% extends 'base.html.twig' %}

{% block title %}Index {% endblock %}

{% block body %}

<section class="Categories">

    {% for category in categories %}
            
        <a href="{{ path('category_show', {'title' : category.Title }) }}" class="btn btn-primary" style="margin-left: 10px; margin-top: 15px;">{{category.Title}}</a>    

    {% endfor %}
    
</section>

<a href="{{ path('book') }}" class="btn btn-primary " style="background-color:grey; margin-left: 20px; margin-top: 100px;">Précédent</a>
<a href="{{ path('addCategory') }}" class="btn btn-primary " style="background-color:grey; margin-left: 20px; margin-top: 100px;">Ajouter une catégorie</a>

{% endblock %}
